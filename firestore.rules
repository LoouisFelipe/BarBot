rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regra de desenvolvimento: Permite acesso total se o usuário estiver autenticado.
    // ATENÇÃO: Não use esta regra em produção.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
